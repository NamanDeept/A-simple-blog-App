<% include ./partials/header.ejs %>
<div class = "ui main text container segment">
    <div class = "huge ui header">New Blog</div>
    <form action ="/blogs" method = "POST" class = "ui form">
        <div class = "field">
          <label>Title</label>
          <input type="text"  name="blog[title]" placeholder="Title">
        </div>
        <div class = "field">
          <label>Image:</label>
              <input type="text"  name="blog[image]" placeholder="Image">
        </div>
     <div class ="field">
         <label>Blog Body:</label>
        <textarea name="blog[body]"  placeholder="Blog Post goes here.."></textarea>
        </div>
        <button class="ui blue inverted button">Submit!</button>
    </form>
</div>
